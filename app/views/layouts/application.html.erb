<!DOCTYPE html>
<html>
  <head>
    <title>OnTour</title>
    <%= csrf_meta_tags %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/foundation/6.4.2/css/foundation.min.css">
    <link href="https://fonts.googleapis.com/css?family=Bree+Serif|Roboto+Slab" rel="stylesheet">
    <link rel="stylesheet" href="http://about.coolecho.net/common/count.min.css" />


    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

  </head>

  <body>
    <div class="nav-bar-container">
      <div class="nav-bar-grid">
          <%= link_to "OnTour", "/", :class => "jam-on-logo"%>
          <ul class="dropdown">
              <% if current_user %>
              <%= image_tag(current_user.image, :class => "small-profile-image") %>
              <ul class="dropdown-content">
                <li><%= link_to "Profile", "/users/#{current_user.id}" %></li>
                  <%= link_to "Sign Out", logout_path %>
                <% else %>
              <% end %>
              </ul>
          </ul>
      </div>
    </div>

    <%= yield %>

  </body>
</html>
